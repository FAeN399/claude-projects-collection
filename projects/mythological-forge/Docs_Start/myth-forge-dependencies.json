{
  "name": "mythological-forge",
  "version": "1.0.0",
  "description": "A transformative narrative generation framework combining ancient wisdom with emergent consciousness",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --mode production",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.{js,css,html}'",
    "validate": "npm run lint && npm run test",
    "docker:build": "docker build -t mythforge:latest .",
    "docker:run": "docker run -d -p 3000:3000 --name mythforge mythforge:latest"
  },
  "dependencies": {
    "express": "4.18.2",
    "compression": "1.7.4",
    "helmet": "7.0.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "winston": "3.11.0",
    "express-rate-limit": "7.1.5",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "nodemon": "3.0.1",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "jest": "29.7.0",
    "eslint": "8.54.0",
    "prettier": "3.1.0",
    "@babel/core": "7.23.3",
    "@babel/preset-env": "7.23.3",
    "babel-loader": "9.1.3",
    "css-loader": "6.8.1",
    "html-webpack-plugin": "5.5.3",
    "style-loader": "3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mythforge/mythological-forge.git"
  },
  "keywords": [
    "mythology",
    "narrative-generation",
    "consciousness",
    "sacred-geometry",
    "archetypal-patterns"
  ],
  "author": "MythForge Team",
  "license": "MIT"
}